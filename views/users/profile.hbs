    {{> navbar}}
    {{#each definitions as |definition|}}

<div class="card card-box" style="max-width: 1540px;">
  <div class="row ">
    <div class="col-md-2">
   <a href="">  <img src="{{definition.link}}" width="100%" class="" alt="..." class="d-flex"> </a> 
    </div>
    <div class="col-md-8">
                    <h5 class="card-title d-inline-flex mx-5 ">Término: <span class="def-term"> {{definition.name}}</span></h5>               
                    <h5 class="pads d-inline-flex mx-5">Categoría:  <span class="def-term"> {{definition.category}}</span></h5>
                    <h5 class="card-title d-inline-flex mx-5 ">Autor: <span class="def-term"> {{definition.author.nickname}}</span></h5>               

                    <p class="pads ">Descripción: {{definition.description}}</p>
                    <p class="pads">Ejemplo: {{definition.example}}</p>
                    <p class="pads">Fuente: <a href="{{definition.link}}">{{definition.link}}</a> </p>
                    {{#if ...currentUser}}
                    
                    <a href="profile/{{definition.id}}" class="btn btn-primary">Ver detalles</a>
                <form action="/profile/{{definition.id}}/delete" method="post">
                    <button type="submit">Borrar ejemplo</button>
                    {{/if}}
                </form>
      </div>
    </div>
  </div>
  {{/each}}